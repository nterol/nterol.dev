{
  "extends": ["next/core-web-vitals", "prettier"],
  "plugins": ["prettier"],
  "overrides": [
    // apply only to typescript files
    {
      "files": [
        "**/*.ts",
        "**/*.tsx"
      ],
      "rules": {
        "import/order": [
          "error",
          {
            "newlines-between": "always",
            "groups": [
              "builtin", // Built-in types are first
              "external",
              "internal",
              "parent",
              "sibling"
            ],
            "alphabetize": {
              "order": "asc",
              "caseInsensitive": false
            },
            "warnOnUnassignedImports": false
          }
        ]
      }
    }
  ]
}